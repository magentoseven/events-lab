@model Events.Web.Models.EventViewModel

<div class="col-lg-4 col-md-6 col-sm-6 col-12">
    <div class="container event-container">
        <div class="container">
            <div class="row">
                <div class="event-title"><h3>@Model.Title</h3></div>
            </div>
            <div class="row event-info">
                <i class="far fa-calendar-alt"></i><span>@Html.DisplayFor(e => e.StartDateTime)</span>
            </div>
            <div class="row event-info">
                <i class="fas fa-map-marker-alt"></i><span>@Model.Location</span>
            </div>
            <div class="row event-action">
                @Html.ActionLink("View details", "Details", "Event", new { id = Model.Id }, new { @class = "btn btn-link" })
            </div>
        </div>
    </div>
</div>