@model Events.Web.Models.EventEditorFormViewModel

<div class="container page-header">
    <h3>@ViewBag.Title</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-2">
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.StartDateTime)
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.StartDateTime, new { htmlAttributes = new { @class = "form-control form-datetimepicker" } })
            </div>
            <div class="col-md-2">
                @Html.ValidationMessageFor(model => model.StartDateTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Location)
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-2">
                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Description, htmlAttributes : new { @class = "form-control", rows = "3" } )
            </div>
            <div class="col-md-2">
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.IsPublic)
            </div>
            <div class="col-md-8">
                @Html.CheckBoxFor(model => model.IsPublic, htmlAttributes: new { @checked = "true", @class = "control-checkbox" })
            </div>
            <div class="col-md-2">
                @Html.ValidationMessageFor(model => model.IsPublic, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2">

            </div>
            <div class="col-md-10">
                <input type="submit" value="@ViewBag.SubmitButtonText" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "My", null, htmlAttributes: new { @class = "btn btn-link" })
            </div>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/bootstrap-datetimepicker")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            var date = new Date();

            $('#StartDateTime').datetimepicker({
                format: 'DD-MMM-YYYY HH:mm',
                sideBySide: true,
                showTodayButton: true,
                defaultDate: date,
            });

            date.setHours(1);
            date.setMinutes(0);
            $('#Duration').datetimepicker({
                format: 'HH:mm',
                defaultDate: date,
                showClear: true
            });
        });
    </script>
}

@section styles {
    @Styles.Render("~/Content/bootstrap-datetimepicker")
}