<div class="chat-container">
    <div class="container">
        <div class="row">
            <div class="chat-title">Live Chat</div>
        </div>
    </div>
    <div id="chatbox" class="container" style="margin: 0; padding: 0; display: none">
        <div id="chatscrollpanel" class="row chat-scrollpanel" style="margin: 0; padding: 0">
            <div id="chatlog" class="chat-messages">
                <div class="chat-message">
                    Live chat is not available at the moment.
                </div>
            </div>
        </div>
        <div class="row chat-form" style="margin: 0; padding: 5px">
            <div class="col-10" style="padding: 0 5px 0 0">
                <input id="chatinput" class="form-control form-control-sm" />
            </div>
            <div class="col-2" style="padding: 0">
                <button id="chatsend" class="btn btn-primary btn-sm" style="width: 100%"><i class="fas fa-paper-plane"></i></button>
            </div>
        </div>
    </div>
</div>